{
  "family": "dev-core-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::851725322802:role/LabRole",

  "containerDefinitions": [
    {
      "name": "api-gateway",
      "image": "${APIGATEWAY_IMAGE}",
      "essential": true,
      "portMappings": [{ "containerPort": 8000 }]
    },
    {
      "name": "product",
      "image": "${PRODUCT_IMAGE}",
      "essential": true,
      "portMappings": [{ "containerPort": 8001 }]
    },
    {
      "name": "inventory",
      "image": "${INVENTORY_IMAGE}",
      "essential": true,
      "portMappings": [{ "containerPort": 8002 }]
    },
    {
      "name": "postgres",
      "image": "postgres:16",
      "essential": true,
      "portMappings": [{ "containerPort": 5432 }]
    },
    {
      "name": "redis",
      "image": "redis:7",
      "essential": true,
      "portMappings": [{ "containerPort": 6379 }]
    }
  ]
}
